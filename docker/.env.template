# Real-Debrid API token (REQUIRED)
# Get from: https://real-debrid.com/apitoken
REALDEBRID_TOKEN=

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
AUTH_ENABLED=false
AUTH_USERNAME=
AUTH_PASSWORD=

# =============================================================================
# TRAEFIK CONFIGURATION
# =============================================================================
