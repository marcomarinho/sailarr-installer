# =============================================================================
# MEDIACENTER - STANDARD CONFIGURATION
# Safe to share, version control, and customize across installations
# =============================================================================

# =============================================================================
# DOCKER IMAGES & TAGS - Customizable versions
# =============================================================================

# Core Media Stack
PLEX_IMAGE=lscr.io/linuxserver/plex
PLEX_TAG=latest

OVERSEERR_IMAGE=sctx/overseerr
OVERSEERR_TAG=latest

RADARR_IMAGE=lscr.io/linuxserver/radarr
RADARR_TAG=latest

SONARR_IMAGE=lscr.io/linuxserver/sonarr
SONARR_TAG=latest

PROWLARR_IMAGE=lscr.io/linuxserver/prowlarr
PROWLARR_TAG=develop

# Download & Storage
ZURG_IMAGE=ghcr.io/debridmediamanager/zurg-testing
ZURG_TAG=latest

RCLONE_IMAGE=rclone/rclone
RCLONE_TAG=latest

RDTCLIENT_IMAGE=rogerfar/rdtclient
RDTCLIENT_TAG=latest

# Indexer & Quality
ZILEAN_IMAGE=ipromknight/zilean
ZILEAN_TAG=v3.5.0
Zilean__Database__ConnectionString=Host=zilean-postgres;Port=5432;Database=zilean;Username=postgres;Password=postgres

RECYCLARR_IMAGE=ghcr.io/recyclarr/recyclarr
RECYCLARR_TAG=latest

# Infrastructure
TRAEFIK_IMAGE=traefik
TRAEFIK_TAG=latest

TRAEFIK_SOCKET_PROXY_IMAGE=tecnativa/docker-socket-proxy
TRAEFIK_SOCKET_PROXY_TAG=latest

POSTGRES_IMAGE=postgres
POSTGRES_TAG=17.1

# Automation & Tools
AUTOSCAN_IMAGE=cloudb0x/autoscan
AUTOSCAN_TAG=latest

PLEXTRAKTSYNC_IMAGE=lscr.io/linuxserver-labs/plextraktsync
PLEXTRAKTSYNC_TAG=latest

TAUTULLI_IMAGE=lscr.io/linuxserver/tautulli
TAUTULLI_TAG=latest

WATCHTOWER_IMAGE=containrrr/watchtower
WATCHTOWER_TAG=latest

BAZARR_IMAGE=lscr.io/linuxserver/bazarr
BAZARR_TAG=latest

# Dashboard & Utilities
HOMARR_IMAGE=ghcr.io/homarr-labs/homarr
HOMARR_TAG=latest

DASHDOT_IMAGE=mauricenino/dashdot
DASHDOT_TAG=latest

PINCHFLAT_IMAGE=ghcr.io/kieraneglin/pinchflat
PINCHFLAT_TAG=v2025.6.6

